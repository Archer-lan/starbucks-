/* pages/orders/orders.wxss */
.swiper-tab{
	width: 100%;
	border-bottom: 2rpx solid #777777;
	text-align: center;
	line-height: 80rpx;}
.swiper-tab-list{  font-size: 32rpx;
    display: inline-block;
	width: 30%;
	color: rgb(0, 0, 0);
}
.on{ color: rgb(0, 98, 65);
	border-bottom: 8rpx solid rgb(0, 98, 65);}
 
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }
.swiper-box view{
	text-align: center;
}
page{
    width: 100%;
    height: 100%;
    background-color: #f2f2f2;
}
.single{
    /* border: 1px solid #000; */
    border-radius: 10px;
    width: 94%;
    margin: 10px auto;
    background-color: white;
    box-sizing: border-box;
    padding: 10px;
}
.title{
    display: flex;
    justify-content:space-between;
    align-items: center;
}
.title-left{
    margin-left: 13px;
}
.title-right{
	/* line-height: 100rpx; */
    margin-right:13px;
    text-align: right;
    font-size: 12px;
}
.title-right-status{
    color:rgb(142, 218, 187);
}
.title-right-date{
    color: #333;
}
.content-item{
    margin-top: 5px;
    display: flex;
    padding: 5px 10px;
}
.content-item .pic image{
    width: 50px;
    height: 50px;
    border-radius: 10px;
}
.content-item .info{
    margin-top: 5px;
    margin-left: 10px;
    font-size: 14px;
}
.bottom{
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
}
.bottom .bt-left{
    margin-left: 15px;
    color: rgb(142, 218, 187);
    font-size: 16px;
}
.bottom .bt-right{
    display: flex;
}
.bottom .bt-right button{
	width: 150rpx;
	height: 50rpx;
    padding: 4px 0;
	font-size: 14px;
    margin-right: 5px;
	border-radius: 20px;
	vertical-align: middle;
	text-align: center;
	line-height: 26rpx;
}
.bottom .bt-right button:nth-of-type(1){
    border: 1px solid rgb(0, 100, 67);
    color: rgb(0, 100, 67);
}
.bottom .bt-right button:nth-of-type(2){
    border: 1px solid rgb(0, 100, 67);
    color: white;
    background-color: rgb(0, 100, 67);
}